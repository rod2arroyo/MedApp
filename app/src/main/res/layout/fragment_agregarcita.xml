<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="395dp"
        android:layout_height="82dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/topborder" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="367dp"
        android:layout_height="167dp"
        android:layout_marginTop="92dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/baseop" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="279dp"
        android:layout_height="100dp"
        android:layout_marginBottom="32dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:srcCompat="@drawable/baseclara" />

    <TextView
        android:id="@+id/citaespe"
        android:layout_width="79dp"
        android:layout_height="24dp"


        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:text="Centro:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="17sp"

        android:textStyle="bold"
        app:circularflow_radiusInDP="50dp"
        app:layout_constraintBottom_toTopOf="@+id/citadoctor"
        app:layout_constraintStart_toStartOf="@+id/imageView4" />

    <TextView
        android:id="@+id/citadoctor"
        android:layout_width="79dp"
        android:layout_height="26dp"


        android:layout_marginStart="16dp"

        android:layout_marginBottom="4dp"
        android:text="Doctor:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"

        app:circularflow_radiusInDP="50dp"
        app:layout_constraintBottom_toTopOf="@+id/citahorario"
        app:layout_constraintStart_toStartOf="@+id/imageView4" />

    <TextView
        android:id="@+id/citahorario"
        android:layout_width="79dp"
        android:layout_height="26dp"


        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:text="Horario:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="17sp"

        android:textStyle="bold"
        app:circularflow_radiusInDP="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4" />

    <EditText
        android:id="@+id/txt_doctor_nuevo"
        android:layout_width="164dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/base1"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/txt_horario_nuevo"
        app:layout_constraintStart_toEndOf="@+id/citadoctor" />

    <EditText
        android:id="@+id/txt_horario_nuevo"
        android:layout_width="164dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/base1"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/citahorario" />

    <EditText
        android:id="@+id/txt_centro_nuevo"
        android:layout_width="164dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/base1"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/txt_doctor_nuevo"
        app:layout_constraintStart_toEndOf="@+id/citaespe" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text=" Agregar Cita "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_nueva_cita"
        android:layout_width="137dp"
        android:layout_height="109dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/imgmas"
        android:text="_"
        android:textColor="#00FFEB3B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>