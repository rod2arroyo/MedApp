<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"

    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="396dp"
        android:layout_height="169dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseop" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="279dp"
        android:layout_height="100dp"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="-7dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/db_numero_doctor_contacto"
        app:layout_constraintStart_toStartOf="@+id/citadoctor"
        app:srcCompat="@drawable/baseclara" />

    <Button
        android:id="@+id/btn_agregar_doctor"
        android:layout_width="51dp"
        android:layout_height="52dp"


        android:layout_marginTop="128dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/imgmas"
        android:hapticFeedbackEnabled="false"
        android:text="_"
        android:textColor="#00FFEB3B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doctornombre"
        android:layout_width="207dp"
        android:layout_height="20dp"


        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"

        android:text="Contacto Medico"

        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#493027"
        android:textSize="20dp"
        android:textStyle="bold"
        app:circularflow_radiusInDP="50dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/citaespe"
        android:layout_width="79dp"
        android:layout_height="24dp"


        android:layout_marginStart="44dp"

        android:layout_marginBottom="4dp"

        android:text="Nombre:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        app:circularflow_radiusInDP="50dp"

        app:layout_constraintBottom_toTopOf="@+id/citadoctor"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/citadoctor"
        android:layout_width="79dp"
        android:layout_height="26dp"


        android:layout_marginStart="44dp"

        android:layout_marginBottom="4dp"

        android:text="Especialidad:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        app:circularflow_radiusInDP="50dp"

        app:layout_constraintBottom_toTopOf="@+id/citahorario"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/citahorario"
        android:layout_width="79dp"
        android:layout_height="26dp"


        android:layout_marginStart="44dp"

        android:layout_marginBottom="16dp"

        android:text="Numero:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        app:circularflow_radiusInDP="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/db_especialidad_contacto"
        android:layout_width="164dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/base1"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/db_numero_doctor_contacto"
        app:layout_constraintStart_toEndOf="@+id/citadoctor" />

    <TextView
        android:id="@+id/db_numero_doctor_contacto"
        android:layout_width="164dp"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/base1"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/citahorario" />

    <TextView
        android:id="@+id/db_doctor_contacto"
        android:layout_width="164dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/base1"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/db_especialidad_contacto"
        app:layout_constraintStart_toEndOf="@+id/citaespe" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="358dp"
        android:layout_height="3dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/linea" />


</androidx.constraintlayout.widget.ConstraintLayout>

